NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Supabase credentials
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE=your-service-role-key
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE}

# Background tasks / cron
CRON_SECRET=change-me

# Email delivery (Resend)
RESEND_API_KEY=
FROM_EMAIL=noreply@yourdomain.com

# Script helpers (optional)
TEST_URL=http://localhost:3000
RUNS=10
PARALLEL=3

# X (Twitter) API credentials for syncing posts
X_BEARER_TOKEN=your_bearer_token_here
X_USER_ID=your_x_user_id_here
# Optional: If X_USER_ID is not set, we'll fetch it from username
X_USERNAME=web3recapio

# X (Twitter) Webhook credentials (for Account Activity API or relay)
# Use your app consumer secret for signature/CRC validation
X_WEBHOOK_CONSUMER_SECRET=your_consumer_secret_here

